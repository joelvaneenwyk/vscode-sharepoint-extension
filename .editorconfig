# editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = single
trailing_comma = none
max_line_length = 120

[*.{ts}]
indent_size = 4

[*.{js}]
indent_size = 2

[*.md]
indent_size = 2

[*.yml]
indent_size = 2
